{
  "name": "typing_game_api",
  "version": "1.0.0",
  "description": "Typing Game",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p .",
    "createsuperuser:dev": "ts-node src/app.ts createsuperuser",
    "createsuperuser": "node dist/app.js createsuperuser",
    "lint": "eslint --fix src/**/*.ts",
    "start:dev": "nodemon --exec ts-node src/app.ts bootstrap --port 8000",
    "start": "node dist/app.js bootstrap",
    "test": "jest"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "tests/**/*.test.ts"
    ],  
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  },
  "keywords": [
    "REST",
    "API"
  ],
  "author": "Sumit Sharma",
  "license": "MIT",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.3.3",
    "@types/supertest": "^2.0.12",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "eslint": "^8.44.0",
    "eslint-config-standard-with-typescript": "^36.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.6.1",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.2",
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "mongoose": "^7.3.1",
    "morgan": "^1.10.0",
    "socket.io": "^4.7.2",
    "yargs": "^17.7.2"
  }
}
